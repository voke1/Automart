      "type": "object",
      "required": [
        "name",
        "photoUrls"
      ],
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "owner": {
          "type": "string",
          "example": "John Doe"
        },
        "price": {
          "type": "integer",
          "example": "230,000.00"
        },
        "manufacturer": {
